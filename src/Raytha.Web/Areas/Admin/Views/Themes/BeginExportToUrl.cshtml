@using Raytha.Web.Areas.Admin.Views.Themes
@model ThemesBeginExportToUrl_ViewModel
@{
    ViewData["Title"] = "Themes > Export";
    ViewData["ActiveSubMenu"] = "Export";
}

@(await Html.PartialAsync("_PageHeader", new PageHeader_ViewModel
{
    Title = ViewData["Title"].ToString(),
}))

<div class="row mb-4">
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                <form asp-route="themesexporttourl" method="post" class="py-4">
                    <input type="hidden" asp-for="@Model.Id">
                    <div class="col-lg-12 mt-2">
                        <div class="mb-3">
                            <div class="large-form-btn">
                                <label class="form-label" asp-for="@Model.IsCanExport"></label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.IsCanExport">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Url"></label>
                            <input type="text" class="form-control" asp-for="Url" disabled>
                            <input type="hidden" asp-for="Url">
                        </div>
                    </div>
                    <hr/>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @(await Html.PartialAsync("~/Areas/Admin/Views/Themes/_ActionsMenu.cshtml", new ThemesActionsMenu_ViewModel
    {
        ThemeId = Model.Id,
    }))
</div>